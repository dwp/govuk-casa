{% extends "layouts/custom-main.njk" %}

{% from "components/button/macro.njk" import govukButton %}

{% block casaPageTitle %}
  {{ t('finish:pageTitle') }}
{% endblock %}

{% block content %}
  <form action="{{ casa.mountUrl }}preliminary/finish" method="post">
    <input type="hidden" name="_csrf" value="{{ casa.csrfToken }}">

    <h1 class="govuk-heading-xl">{{ t('finish:h1') }}</h1>

    <div class="govuk-form-group">
      <p class="govuk-body">
        This is the final submission page; a final chance for the user to confirm they want to go ahead.
      </p>
    </div>

    <p class="govuk-body">
      {{ govukButton({
        text: t('finish:form.buttons.submit.label')
      }) }}
    </p>
  </form>
{% endblock %}
